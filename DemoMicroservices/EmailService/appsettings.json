{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "ConnectionStrings": {
    "MessageBus": "amqp://admin:password@localhost:5671/",
    "MessageBusSQS": "[AccessKey]:[SecretKey]@ap-southeast-1"
  },

  "UsingAmazonSQS": "false",

  "Queue": "email-message",
  "Topic": "email",
  "Bind": "notification",

  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\logs\\DemoMicroservices-EmailService.logs.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
